ClearCollect(
    DropdownlinenameItems,
    {
        line_name: "All",
        pd: varFilterPD,
        section_code: varSectionCode
    }
);
Collect(
    DropdownlinenameItems,
    Filter(
        MASTER_LINE,
        pd = varFilterPD && section_code = varSectionCode
    )
);
ClearCollect(
    colContent,
    '5M1E_Improvement_Content'
);
Notify(
    "โหลดข้อมูลเสร็จสิ้น",
    NotificationType.Success
);
